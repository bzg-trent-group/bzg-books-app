aside
    &.left-aside
        width 300px
        min-height 100%
        position absolute
        top 0
        left 0
        padding-top 50px
        box-shadow 1px 0 2px var(--main-shadow-color)
        &.aside-close
            display block !important
            width 50px
            span
                display none
            .user-info
                display none
            .user-image
                & > img
                    width 30px
                    height 30px
        .header-aside
            max-height 20%
            min-height 100px
            background-color var(--header-back-color)
            padding 16px 10px
            & > div
                float left
            .user-image
                & > img
                    width 80px
                    height 80px
                    border-radius 50px
            .user-info
                padding 5px 10px

aside.left-aside h1, h2, h3
    display inline